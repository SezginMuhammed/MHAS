<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    android:orientation="horizontal"
    tools:context=".Norolog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/noroarama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/renk"
            android:iconifiedByDefault="false"
            android:queryHint="MHAS" />


    </LinearLayout>

    <TextView
        android:id="@+id/noro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="GİTMEK İSTEDİĞİNİZ HASTAHANEYİ SEÇİNİZ"
        android:textAlignment="center"
        android:textColor="#10004A"
        android:textSize="15sp"
        android:textStyle="bold|italic"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/noro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NÖROLOJİ"
            android:textAlignment="center"
            android:textColor="#10004A"
            android:textSize="45sp"
            android:textStyle="bold|italic">

        </TextView>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="@drawable/renk"
        android:orientation="vertical">

        <ListView
            android:id="@+id/norolist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

</RelativeLayout>